{
  "compilerOptions": {
    "composite": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "target": "es2022",
    "lib": ["es2022", "dom"],
    "allowJs": true,
    "checkJs": false,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "packages/*/tsconfig.json"
    }
  ]
}