{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,

    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,

    "sourceMap": true,

    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["**/*.test.ts"],
}
