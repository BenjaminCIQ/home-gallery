[Unit]
Description=Photoframe Sync Service
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
User=photoframe
Group=photoframe
# The "%i" will be filled with instance name (from .path)
ExecStart=/usr/bin/env python3 /path/to/folder-sync.py -c /etc/photoframe/config.yml -s %i
StandardOutput=journal
StandardError=journal
