{
  "name": "@home-gallery/logger",
  "version": "1.0.0",
  "description": "Logger for HomeGallery",
  "type": "module",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/node.js",
        "types": "./dist/node.d.ts"
      },
      "default": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    },
    "./node": {
      "import": "./dist/node.js",
      "types": "./dist/node.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm-run-all -p build:js build:types",
    "build:js": "dev-cli build",
    "build:types": "npx tsc -d --emitDeclarationOnly --skipLibCheck",
    "test": "tap",
    "watch": "dev-cli build --watch",
    "watch:test": "tap repl w"
  },
  "keywords": [
    "HomeGallery",
    "logger"
  ],
  "author": "Sebastian Felis <sebastian@silef.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xemle/home-gallery.git",
    "directory": "packages/logger"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@home-gallery/dev-tools": "file:../dev-tools"
  }
}
