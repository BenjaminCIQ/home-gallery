{
  "name": "@home-gallery/bundle",
  "version": "1.0.0",
  "description": "Bundle HomeGallery to OS specific application",
  "keywords": [
    "HomeGallery",
    "app",
    "bundle"
  ],
  "author": "Sebastian Felis <sebastian@silef.de>",
  "homepage": "https://home-gallery.org",
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index.js",
  "directories": {
    "lib": "dist"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xemle/home-gallery.git",
    "directory": "packages/bundle"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm-run-all -p build:js build:types",
    "build:js": "dev-cli build",
    "build:types": "npx tsc -d --emitDeclarationOnly --skipLibCheck",
    "test": "tap",
    "watch": "npm-run-all -p watch:js watch:types",
    "watch:js": "dev-cli build --watch",
    "watch:types": "npx tsc -d --emitDeclarationOnly --skipLibCheck --watch",
    "watch:test": "tap repl w"
  },
  "dependencies": {
    "caxa": "^1.0.0",
    "glob-to-regexp": "^0.4.1",
    "picomatch": "^4.0.2",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "tar-fs": "^3.1.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@home-gallery/dev-tools": "file:../dev-tools",
    "glob": "^11.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
